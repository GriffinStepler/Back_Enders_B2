<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/head'); %>
</head>

<body>

    <header id="headerBlock">
        <%- include('../partials/header'); %>
    </header>

    <div class="menuBar">
        <ul>
            <li><a href="/gethome">Home</a></li>
            <li><a href="/meetings">Meetings</a></li>
            <li><a href="/mentors">Mentors</a></li>
            <li><a href="/chat">Chat</a></li>
        </ul>
    </div>

    <div class="content" id="openMentorTable">
        <h3 id="openMentorTableHeader">Suggested Mentors Available for You</h3>
        <table>
            <tr>
                <th colspan="2">Mentor Name</th>
                <th colspan="2">Tier Level</th>

            </tr>
            <form action="/addnewmentor" method="post">
                <% for (var i = 0; i < availableMentors.length; i++) { %>
                    <tr>
                        <td>
                            <input type="radio" id="mentorID" name="mentorID" value="<%=availableMentors[i].id %>">
                        </td>
                        <td>
                            <%=availableMentors[i].id %>
                        </td>
                        <td>
                            <%= availableMentors[i].firstName %>
                                <%= availableMentors[i].lastName %>
                        </td>
                        <td>
                            <%= availableMentors[i].tierLevel %>
                        </td>
                        <td>
                            <a href='<%= availableMentors[i].linkedIn %>'>LinkedIn</a>
                        </td>
                    </tr>
                    <% } %>


        </table>
        <br>

        <input type="submit" value="  Add My New Mentor!  " id="newMentorButton">

        </form>



    </div>

    <div class="content" id="currentMentorShips">
        <h3 id="currentMentorShipsHeader">Mentor/Mentee Pairs</h3>
        <table id="mentorshipPairsTable">
            <tr>
                <th>Mentor</th>
                <th>Mentee</th>
            </tr>
            <br>


            <% for (var i = 0; i < mentors.length; i++) { %>
                <tr>
                    <td>
                        <%= mentors[i].firstName %>
                            <%= mentors[i].lastName %>
                    </td>
                    <td>
                        <%= mentees[i].firstName %>
                            <%= mentees[i].lastName %>
                    </td>
                </tr>
                <% } %>

        </table>
    </div>
</body>

</html>