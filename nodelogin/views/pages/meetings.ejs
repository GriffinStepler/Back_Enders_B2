<script>
    // gets date and sets as a variable and heading for todayDiv
    function getDate(dateVar) {        
        var today = new Date();
        var date = (today.getMonth()+1) + '/' + today.getDate() + '/' + today.getFullYear();
        console.log("Date: ", date)
        dateString = "Today's Date: " + date
        if (dateVar){
            document.getElementById(dateVar).innerHTML = dateString
            }
        return date
}
</script>
